@base <https://raw.githubusercontent.com/energy-domain/ontology-tests/main/001/02_specialized/> .
@prefix : <https://raw.githubusercontent.com/energy-domain/ontology-tests/main/001/02_specialized/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix energyBase: <https://raw.githubusercontent.com/energy-domain/ontology-tests/main/001/01_base/> .

##################################################
### Base Ontologies Imports ###
##################################################
#<> owl:imports <https://raw.githubusercontent.com/energy-domain/ontology-tests/main/001/01_base/> .

##################################################
### Specialized Relationships ###
##################################################
### Relacionamentos entre Classes ###
energyBase:Pump a owl:Class ;
    owl:equivalentClass [
        a owl:Restriction ;
        owl:onProperty energyBase:connectsTo ;
        owl:allValuesFrom energyBase:Pipe ; # all pumps must be connected to a pipe
        owl:cardinality 1 
    ] .

energyBase:Pipe a owl:Class ;
    owl:equivalentClass [
        a owl:Restriction ;
        owl:onProperty energyBase:connectsTo ;
        owl:allValuesFrom energyBase:Tank ; # you should declare a list of all possible assets here (not only a tank)
        owl:cardinality 1 
    ] .
