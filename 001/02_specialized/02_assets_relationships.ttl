@base <https://raw.githubusercontent.com/energy-domain/ontology-tests/main/001/02_specialized/> .
@prefix : <https://raw.githubusercontent.com/energy-domain/ontology-tests/main/001/02_specialized/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix assets: <https://raw.githubusercontent.com/energy-domain/ontology-tests/main/001/01_base/02_assets_definition_and_taxonomy.ttl> .
@prefix rel: <https://raw.githubusercontent.com/energy-domain/ontology-tests/main/001/01_base/03_relationships_definition.ttl> .

##################################################
### Base Ontologies Imports ###
##################################################
owl:imports <https://raw.githubusercontent.com/energy-domain/ontology-tests/main/001/01_base/02_assets_definition_and_taxonomy.ttl> .
owl:imports <https://raw.githubusercontent.com/energy-domain/ontology-tests/main/001/01_base/03_relationships_definition.ttl> .

##################################################
### Specialized Relationships ###
##################################################
### Relacionamentos entre Classes ###
assets:Pump a owl:Class ;
    owl:equivalentClass [
        a owl:Restriction ;
        owl:onProperty rel:connectsTo ;
        owl:allValuesFrom assets:Pipe ; # all pumps must be connected to a pipe
        owl:cardinality 1 
    ] .

assets:Pipe a owl:Class ;
    owl:equivalentClass [
        a owl:Restriction ;
        owl:onProperty rel:connectsTo ;
        owl:allValuesFrom assets:Tank ; # you should declare a list of all possible assets here (not only a tank)
        owl:cardinality 1 
    ] .
